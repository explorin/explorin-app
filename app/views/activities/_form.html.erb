<%= simple_form_for(@activity, html:{class: "form-hoizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :activity_image_file_size, class: "alert alert-danger" %>
  <%= f.full_error :activity_image_content_type, class: "alert alert-danger" %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, input_html:{rows: "15"} %>
    <%= f.input :activity_image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
